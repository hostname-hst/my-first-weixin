/* pages/posts/posts.wxss */
swiper,swiper image{
  width: 100%;
  height: 450rpx;
}
.post-container{
  display: flex;
  flex-direction: column;
  margin-top:20rpx;
  margin-bottom:40rpx;
  margin-left: 0rpx;
  background-color:#fff;
  border-bottom: 1px solid #ededed;
  /* border-top: 1px solid #ededed; */
  padding-bottom: 5px;
}
.post-author-date{
   margin:10rpx 0 20rpx 10rpx;
}
.post-author-date image{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle
}
.post-author-date text{
  margin-left: 20px;
  vertical-align: middle;
}
.post-title{
   font-size:34rpx;
    font-weight: 600;
    color:#333;
    margin-bottom: 10px;
    margin-left: 10px;
}
.post-image{
  width: 100%;
  height: 340rpx;
  margin-bottom: 15rpx;
}
.post-content{
  color:#666;
  font-size:28rpx;
  margin-bottom:20rpx;
  margin-left: 20rpx;
  letter-spacing:2rpx;
  line-height: 40rpx;
}
.post-like{
  font-size:13px;
  line-height: 16px;
  margin-left: 10px;
}
.post-like-img{
  width: 16px;
  height: 16px;
  vertical-align: middle;
  margin-right: 8px;
}
.post-like-font{
  vertical-align: middle;
  margin-right: 20px;
}